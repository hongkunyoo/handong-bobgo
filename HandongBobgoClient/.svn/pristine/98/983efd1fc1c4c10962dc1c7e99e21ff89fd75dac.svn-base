<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView_askMealDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아침" />

        <Button
            android:id="@+id/btn_ask_breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청하기" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점심" />

        <Button
            android:id="@+id/btn_ask_lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청하기" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저녁" />

        <Button
            android:id="@+id/btn_ask_dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신청하기" />

    </LinearLayout>

</LinearLayout>